<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrochetoApp.Pages.Access.Login"
             Title="Login">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="CornflowerBlue" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Margin" Value="10" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Margin="0,20,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Text="Login" Grid.Row="0" HorizontalTextAlignment="Center" FontSize="24" />

        <StackLayout Grid.Row="1" Margin="20">
            <Entry Placeholder="Username" Text="{Binding Username}" />
            <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" />
            <Button Text="Login" Command="{Binding LoginCommand}" />
        </StackLayout>

        <Label Grid.Row="2" HorizontalTextAlignment="Center" Text="Forgot password?" />
    </Grid>
</ContentPage>